<div class="panel-heading">
	<div class="row">
		<div class="col-xs-4 col-sm-6">
			{{#if showActionNew}}
				{{#if actionNew}}
					{{#if createInline}}
						<button disabled={{newElementDisabled}} type="button" class="btn btn-warning" {{action 'showCreate'}}>Nuevo Elemento</button>
					{{else}}
						{{#each properties as |prop|}}
							{{#if prop.isVisible}}
								{{!-- hay que tener cuidado de no permitir la propiedad value en properties --}}
								{{input type=prop.type placeholder=prop.title value=prop.value}} 
							{{/if}}
						{{/each}}
						<button type="button" class="btn  btn-warning" {{action 'new'}}>New</button>
					{{/if}}
				{{/if}}
			{{/if}}
		</div>
		<div class="col-xs-8 col-sm-4">
			{{!-- filtro de b√∫squeda --}}
			{{#if showGlobalFilter}}
				<div class="pull-right">
				  <form class="form-inline globalSearch" action="">
				    <div class="form-group">
				      {{input type="text" value=filterString placeholder="Filtrar" class="form-control filterString"}}
				    </div>
				  </form>
				</div>
			{{/if}}
		</div>
		<div class="col-xs-12 col-sm-2">
			{{#if showColumnsFilter}}
				<div class="pull-right columns-dropdown mleft-low">
				  <div class="btn-group">
				    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				      Columnas<span class="caret"></span>
				    </button>
				    <ul class="dropdown-menu pull-right">
				      <li><a {{action "showAllColumns"}} href="#">Mostrar Todo</a></li>
				      <li><a {{action "hideAllColumns"}} href="#">Ocultar Todo</a></li>
				      <li><a {{action "restoreDefaultVisibility"}} href="#">Restablecer</a></li>
				      <li class="divider"></li>
				      {{#each properties as |prop|}}
				        {{#if prop.mayBeHidden}}
				          <li>
				            <a {{action "toggleHidden" prop}} href="#">
				                {{#if prop.isVisible}}
				                  <span class="glyphicon glyphicon-check"></span> 
				                {{else}}
				                  <span class="glyphicon glyphicon-unchecked"></span> 
				                {{/if}}
				                {{prop.title}}
				            </a>
				          </li>
				        {{/if}}
				      {{/each}}
				    </ul>
				  </div>
				</div>
			{{/if}}
		</div>
	</div>
</div>